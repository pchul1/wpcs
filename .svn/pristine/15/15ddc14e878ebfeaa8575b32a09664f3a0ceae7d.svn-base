@chartset "utf-8";

/* YBH(2010~) */

@import url("reset.css");


.detailView {padding:24px 7px 0; font-size:12px; font-family:'굴림', gulim;}

h1.detailTit {padding-bottom:10px; texi-align:center;}

.detailBox .topL,
.detailBox .topR,
.detailBox .botL,
.detailBox .botR {font-size:0; background:url(/images/taksu/box_detailView.gif) no-repeat 0 0;}
.detailBox .topL {padding-left:8px;}
.detailBox .topR {padding-right:8px; background-position:right top;}
.detailBox .botL {padding-left:8px; background-position:0 -8px;}
.detailBox .botR {padding-right:8px; background-position:right -8px;}
.detailBox .top,
.detailBox .bot {height:7px; background-color:#e7e7e7;}
.detailBox .top {border-top:1px solid #d7d7df;}
.detailBox .bot {border-bottom:1px solid #d7d7df;}
.detailBox .con {padding:0 15px; border:1px solid #d7d7df; border-width:0 1px; background-color:#e7e7e7;}

.detailBox .con dl {display:block; overflow:hidden; margin-top:9px; border-top:1px solid #ccc;}
*html .detailBox .con dl {zoom:1;}
.detailBox .con dt {float:left; padding:11px 10px 0 13px; line-height:1; vertical-align:top; background:url(/images/detailView/bu_circleArrow.gif) no-repeat 0 12px;}
.detailBox .con dd {float:left; padding:9px 20px 0 0;}
.detailBox .con dd select,
.detailBox .con dd input {margin:0;}
.detailBox .con dd label {padding-left:8px;}
* html .detailBox .con dd input {margin:-1px 0; vertical-align:top;}
.detailBox .con dd.box {padding:6px 20px 4px; border:2px solid #c0c0d0;}

.detailBox .con dl.first {margin-top:0; border-top:none;}
.detailBox .con dl.first dd {padding-top:6px;}
.detailBox .con dd label.first {padding-right:20px;}
.detailBox .con dd.checkList {padding-top:10px;}

.btnMenu {padding:10px 0; text-align:right;}
.btnMenu li {display:inline;}

.basicTable {border-collapse:collapse;}
.basicTable th {border:2px solid #8899ac; border-width:2px 1px; font-weight:bold; line-height:1.2; text-align:center; vertical-align:middle; background-color:#bfc7d0;}
.basicTable td {padding:9px 0; border:1px solid #ccc; line-height:1.2; text-align:center; vertical-align:middle;}
.basicTable th div {padding:9px 0;}
.basicTable th.first_th div {border-left:1px solid #8899ac;}
.basicTable th.last_th div {border-right:1px solid #8899ac;}
.basicTable tr.addStyle td {background-color:#e7e7e7;}
.basicTable tr:hover td {background-color:#c7d7df;}

.inputRadio,
.inputCheck {position:relative; top:-1px; *top:0px; width:13px; height:13px; margin:0; vertical-align:middle;}

.overflowBox {overflow:auto;}
.botBorder {border-bottom:1px solid #ccc;}
