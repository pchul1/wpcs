function p7_signed_enveloped()
{
	var strCertID = "LoginID@DomainName";
	var strMessage = document.sample.OriginalMessage.value;

	//	사용자 키분배용 인증서 얻기
	var strKmCert = getUserKMCert( strCertID );
	if ( strKmCert == "" )
	{
		var strErr = getErrorString();
