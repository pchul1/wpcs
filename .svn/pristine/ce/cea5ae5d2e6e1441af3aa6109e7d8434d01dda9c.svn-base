		}
	}
	else
	{
		alert( "키분배용 인증서: " + strKmCert );
	}

	var strPKCS7Message = generatePKCS7SignedEnvelopedMsg( strCertID, strMessage, strKmCert, "" );
	if ( strPKCS7Message == "" )
