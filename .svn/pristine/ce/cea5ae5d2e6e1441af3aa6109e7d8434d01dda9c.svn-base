function file_p7_signed_enveloped()
{
	var strCertID = "LoginID@DomainName";
	var strFilePath = document.sample.FilePath.value;
	var strPKCS7FilePath = strFilePath + ".p7";

	//	사용자 키분배용 인증서 얻기
	var strKmCert = getUserKMCert( strCertID );
	if ( strKmCert == "" )
